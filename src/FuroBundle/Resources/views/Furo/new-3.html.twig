          <option>Mantención y/o limpieza de rejillas</option>
          <option>Proyectos solución aguas lluvias</option>
          <option>Reparación de veredas</option>
          <option>Reparaciones varias</option>
          <option>Retiro de escombros</option>
          <option>Retido de sedimentos</option>
          <option>Tapas de cámaras</option>
          <option>Traslado de materiales</option>
          <option>Otros</option>
        </select>
        </div>
      </div>

      <div class="form-group form-row">
        <label class="col-2 text-right form-label"><strong>Descripción</strong></label>
      </div>

      <div class="form-group form-row">
        <div class="col-1">&nbsp;</div>
        <div class="col-7"><textarea class="form-control" rows="6"></textarea></div>
      </div>

      <div class="form-group form-row">
        <div class="col-4">&nbsp;</div>
        <div class="col-1 text-right"><a href="{{ url('furo_new', {'step': 3}) }}" class="btn btn-success">Guardar</a></div>
        <div class="col-3 ">&nbsp;</div>
      </div>
    </form>
  </div>
