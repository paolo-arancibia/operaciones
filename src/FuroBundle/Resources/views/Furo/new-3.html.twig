{% extends '::layout.html.twig' %}

{% block content %}
  <div id="container" class="container-fluid">
    <h3 class="title mb-2 border-bottom border-secondary">FURO Nuevo</h3>

    <form id="form-step-2" class="mt-3">
      <div class="form-group form-row">
